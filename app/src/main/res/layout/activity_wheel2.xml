<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Wheel2"
    android:orientation="vertical">

    <github.hellocsl.cursorwheel.CursorWheelLayout
        android:id="@+id/curserwheel"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical|center_horizontal|bottom"
        android:layout_marginTop="-153dp"
        app:wheelCursorColor="#11A2F5"
        app:wheelCursorHeight="19dp"
        app:wheelBackgroundColor="#024977"

        app:wheelFlingValue="500"
        app:wheelItemRotateMode="none"

        app:wheelSelectedAngle="90">

        <TextView

            android:id="@id/id_wheel_menu_center_item"

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:padding="5dp"

            android:text="Day Schedules"
            android:textColor="#11A2F5" />

    </github.hellocsl.cursorwheel.CursorWheelLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:id="@+id/scheduletext"/>

</LinearLayout>